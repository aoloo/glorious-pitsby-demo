@require '_variables'
@require '_mixins'

themed-button($text-color, $bg-color)
  background-color $bg-color
  color $text-color
  &:disabled
    color alpha($text-color, .8)
    background-color alpha($bg-color, .9)
    cursor not-allowed
  +highlight()
    background-color alpha($bg-color, .9)

.pd-button
  padding 0 35px
  color $color-grey-dark
  background-color $color-grey-lighter
  font-size $font-size-xs
  font-weight 600
  text-align center
  line-height 40px
  cursor pointer
  border 0
  themed-button($color-grey-dark, $color-grey-light)
  webkit-appearance(none)
  transition(all, 300ms)
  border-radius(4px)
  box-sizing(border-box)
  unselectable()
  &.pd-button-primary
    themed-button($color-grey-lighter, $color-purple)
  &.pd-button-block
    width 100%
