@require '_mixins'

.col
  float left
  padding 0 10px
  box-sizing border-box

for $size in (1..12)
  .col-{$size}
    width ($size/12) * 100%

for $size in (1..11)
  .col-offset-{$size}
    margin-left ($size/12) * 100%

+breakpoint('xs')
  .col
    float left
    width 100%
    & + .col
      margin-top 20px
  [class*=col-offset]
    margin-left 0
